<div class="container py-5">
  <h2 class="text-center mb-5 fw-bold">戦闘準備</h2>

  <div class="row row-cols-1 row-cols-md-4 g-4 mb-5">
    <% @slots.each_with_index do |character, i| %>
      <div class="col">
        <div class="card h-100 shadow-sm border-dashed" style="border: 2px dashed #ccc; min-height: 200px;">
          <div class="card-body d-flex flex-column justify-content-between align-items-center">
          <span class="badge bg-secondary mb-2">Slot <%= i + 1 %></span>

          <% if character.present? %>
            <div class="fw-bold">
              <%= character.name %>
            </div>
          <% else %>
            <div class="text-muted small">未選択</div>
          <% end %>

            <div class="d-grid gap-2 w-100 mt-3">
              <%= link_to "登録",
                select_character_battles_path(slot: i),
                class: "btn btn-outline-success btn-sm" %>
              <%= button_to "削除",
                remove_slot_battles_path(slot: i),
                method: :delete,
                class: "btn btn-outline-danger btn-sm mt-2" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center">
    <%= link_to "戦闘開始！！", "#", class: "btn btn-danger btn-lg px-5 py-3 shadow fw-bold" %>
  </div>
</div>