<h1>ログイン</h1>

<%= form_with url: login_path, local: true do |f| %>
  <div style="margin-bottom: 15px;">
    <%= f.label :email, "メールアドレス" %><br>
    <%= f.email_field :email, style: "width: 100%; max-width: 300px;" %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= f.label :password, "パスワード" %><br>
    <%= f.password_field :password, style: "width: 100%; max-width: 300px;" %>
  </div>

  <div>
    <%= f.submit "ログイン", style: "padding: 5px 20px; cursor: pointer;" %>
  </div>
<% end %>

<hr>
<p><%= link_to "新規登録はこちら", new_user_path %></p>